<h1>Listing assigned_owners</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assigned_owners.each do |assigned_owner| %>
      <tr>
        <td><%= assigned_owner.task %></td>
        <td><%= assigned_owner.owner %></td>
        <td><%= link_to 'Show', assigned_owner %></td>
        <td><%= link_to 'Edit', edit_assigned_owner_path(assigned_owner) %></td>
        <td><%= link_to 'Destroy', assigned_owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

