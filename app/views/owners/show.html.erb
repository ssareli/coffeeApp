<% provide(:title, @owner.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @owner.name %>
      </h1>
    </section>
  </aside>
</div>

<hr>

<p>
  <strong>Name:</strong>
  <%= @owner.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @owner.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @owner.password %>
</p>

<hr>

  <div class="span8">
    <% if @owner.projects.any? %>
      <h3>Projects (<%= @owner.projects.count %>)</h3>
      <ol class="projects">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
    <% end %>
  </div>


<%= link_to 'Edit', edit_owner_path(@owner) %> |
<%= link_to 'Back', owners_path %>
