<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task list</th>
      <th>Comments</th>
      <th>Priority</th>
      <th>Title</th>
      <th>Owner</th>
      <th>Due</th>
      <th>Due repeat</th>
      <th>Reminder</th>
      <th>Notes</th>
      <th>Status</th>
      <th>Location</th>
      <th>Duration</th>
      <th>Type</th>
      <th>Timeframe</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_list %></td>
        <td><%= task.comments %></td>
        <td><%= task.priority %></td>
        <td><%= task.title %></td>
        <td><%= task.owner %></td>
        <td><%= task.due %></td>
        <td><%= task.due_repeat %></td>
        <td><%= task.reminder %></td>
        <td><%= task.notes %></td>
        <td><%= task.status %></td>
        <td><%= task.location %></td>
        <td><%= task.duration %></td>
        <td><%= task.type %></td>
        <td><%= task.timeframe %></td>
        <td><%= task.category %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

